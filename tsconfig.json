{
    "compilerOptions": {
        "types": ["node"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "module": "commonjs",
        "rootDir": "./",
        "lib": ["ESNext", "DOM"],
        "typeRoots": [
            "frontende/node_modules/@types",
            "frontend/src/types"
        ],
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "strict": false,
        "skipLibCheck": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
    },
    "include": [
        "frontend/src",
        "backend/src"
    ],
    "exclude": [
        "dist"
    ]
}